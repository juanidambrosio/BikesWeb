<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/content/images/favicon.ico" />
    <title>@ViewBag.Title - Bikes Sharing</title>
    <link rel="stylesheet" href="~/content/css/styles.css" />
</head>
<body>


    <header class="navbar">
        <nav>
            <div class="navbar-brand"></div>
            <div id="bd-main-nav">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@ViewBag.RidesUrl">Rides</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@ViewBag.IssuesUrl">Issues</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@ViewBag.SubscriptionUrl">Subscription</a>
                    </li>
                    <li class="nav-item is-active">
                        <a class="nav-link is-active" href="">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@ViewBag.StationsUrl">Stations</a>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="bsh-footer">
        <div class="row">
            <div class="col-md-2 col-sm-12">
                <div class="bsh-footer-logo"></div>
            </div>
            <div class="col-md-6 col-sm-12">
                <ul class="bsh-footer-nav">
                    <li class="bsh-footer-nav-item"><a href="@ViewBag.RidesUrl">Rides</a></li>
                    <li class="bsh-footer-nav-item"><a href="@ViewBag.IssuesUrl">Issues</a></li>
                    <li class="bsh-footer-nav-item"><a href="@ViewBag.SubscriptionUrl">Subscription</a></li>
                    <li class="bsh-footer-nav-item">@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                    <li class="bsh-footer-nav-item"><a href="@ViewBag.StationsUrl">Stations</a></li>
                </ul>
            </div>
            <div class="col-md-4 col-sm-12">
                <ul class="bsh-footer-links">
                    <li class="bsh-footer-list-item"><a class="bsh-footer-link" href="#">Terms</a></li>
                    <li class="bsh-footer-list-item"><a class="bsh-footer-link" href="#">Privacy</a></li>
                    <li class="bsh-footer-list-item"><a class="bsh-footer-link" href="#">Contact</a></li>
                </ul>
            </div>
        </div>

        <div class="row margin-large-top">
            <div class="col-sm-2">
                <div class="bsh-footer-ms-logo"></div>
            </div>
            <div class="col-sm-8">
                <p class="bsh-footer-footnote">
                    This is a sample demo application for developers built with educational purposes only.
                </p>
            </div>
        </div>
    </footer>

    <script src="~/content/js/libs.js"></script>
    <script src="~/content/js/main.js"></script>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/powerbi.js"></script>
    @RenderSection("PageScripts", false)
</body>
</html>